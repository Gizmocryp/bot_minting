# ===== MODE =====
# pilih: eth / base
MODE=eth

# ===== RPC (Alchemy) =====
ETH_HTTP_RPC=https://eth-mainnet.g.alchemy.com/api-key
ETH_WS_RPC=wss://eth-mainnet.g.alchemy.com/v2/api-key

BASE_HTTP_RPC=https://base-mainnet.g.alchemy.com/v2/api-key
BASE_WS_RPC=wss://base-mainnet.g.alchemy.com/v2/api-key

# ===== CONTRACT =====
ETH_CONTRACT=0xISI_CONTRACT_ETH
BASE_CONTRACT=0xISI_CONTRACT_BASE

# ===== MINT =====
# Nama function mint di contract (contoh umum: mint, publicMint, mintPublic)
MINT_FN=mint

# Argumen function (format JSON array). contoh:
# [] atau ["0xabc..."] atau [1] atau [1,"0xabc..."]
MINT_ARGS=[]

# Mint fee (tx.value) dalam ETH (misal 0.005). Kalau mau baca dari contract nanti bisa, tapi ini paling cepat.
MINT_PRICE_ETH=0.005

# ===== GAS PRESET =====
# gasLimit preset (tanpa estimateGas di jalur kritis)
GAS_LIMIT=180000

# Hardcap GAS USD (hanya untuk fee jaringan)
ETH_GAS_USD_CAP=1.5
BASE_GAS_USD_CAP=0.3

# Agresif (priority fee, dalam gwei)
ETH_PRIORITY_GWEI=2.0
BASE_PRIORITY_GWEI=0.05

# Replace-by-fee: cek pending tiap N blok, lalu bump
PENDING_CHECK_EVERY_BLOCKS=1
BUMP_MULT=1.18
MAX_BUMPS=6

